{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "outDir": "./dist-scripts",
    "rootDir": "./scripts",
    "baseUrl": ".",
    "noEmit": true
  },
  "include": ["scripts/**/*.ts"]
}
